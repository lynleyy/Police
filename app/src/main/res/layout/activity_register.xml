<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_blue"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/activity_horizontal_margin"
       >

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="30dp"
            android:src="@mipmap/login_touxiang_x2" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/app_name"
            android:textColor="@color/White"
            android:textSize="48px" />

        <!--<View-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="@dimen/divider_height"-->
            <!--android:layout_marginTop="10dp"-->
            <!--android:background="@color/divider" />-->

        <EditText
            android:id="@+id/et_register_account"
            style="@style/Font35_black"
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height"
            android:background="@drawable/shape_corner_up"
            android:drawablePadding="10dp"
            android:hint="请输入手机号码"
            android:inputType="phone"
            android:maxLength="11"
            android:paddingLeft="10dp" />

        <!--<View-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="@dimen/divider_height"-->
            <!--android:background="@color/divider" />-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_register_yzm"
                style="@style/Font35_black"
                android:layout_width="0dp"
                android:layout_height="@dimen/line_height"
                android:layout_weight="1"
                android:ems="10"
                android:hint="请输入验证码"
                android:inputType="number"
                android:paddingLeft="10dp" />

            <Button
                android:id="@+id/btn_register_yzm"
                style="@style/Font13_red"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/rec_stroke_red"
                android:gravity="center"
                android:onClick="doClick"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="获取验证码" />
        </LinearLayout>

        <!--<View-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="@dimen/divider_height"-->
            <!--android:background="@color/divider" />-->

        <EditText
            android:id="@+id/et_register_pwd"
            style="@style/Font35_black"
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height"
            android:background="@drawable/shape_corner_down"
            android:drawablePadding="10dp"
            android:hint="设置6-12位字母、数字或符号组合"
            android:inputType="textWebPassword"
            android:maxLength="12"
            android:paddingLeft="10dp" />

        <!--<View-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="@dimen/divider_height"-->
            <!--android:background="@color/divider" />-->
    </LinearLayout>

    <Button
        android:id="@+id/btn_register_signup"
        style="@style/Font35_white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/btn_height"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:background="@drawable/shape_corner"
        android:onClick="doClick"
        android:text="注册"
        android:textColor="@color/bg_blue" />

</LinearLayout>